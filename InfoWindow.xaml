<Window x:Class="MobiDude_V2.InfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info" Height="300" Width="400"
        Icon="appicon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Info:" FontWeight="Bold"/>
        <TextBox Name="InfoTextBox" Grid.Row="1" Margin="0,5" IsReadOnly="True" TextWrapping="Wrap"/>

        <TextBlock Text="Config:" Grid.Row="2" Margin="0,10,0,0" FontWeight="Bold"/>
        <TextBox Name="ConfigTextBox" Grid.Row="3" Margin="0,5" IsReadOnly="True" TextWrapping="Wrap"/>
    </Grid>
</Window>
